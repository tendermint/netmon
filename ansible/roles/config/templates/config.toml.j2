[rpc]
laddr = "tcp://127.0.0.1:46657"

[p2p]
laddr = "tcp://{{inventory_hostname}}:46656"
{% set comma = joiner(",") %}seeds = "{% for host in groups[testnet_name]|difference(inventory_hostname) %}{{ comma() }}{{hostvars[host]["inventory_hostname"]}}:46656{% endfor %}"

